{
  "name": "mudap-debug",
  "displayName": "µdap Debugger",
  "description": "Debug adapter for micros.",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/retro-vault/mudap"
  },
  "engines": {
    "vscode": "^1.88.0"
  },
  "categories": [
    "Debuggers"
  ],
  "files": [
    "package.json",
    "LICENSE"
  ],
  "contributes": {
    "debuggers": [
      {
        "type": "mudap",
        "label": "µdap Debugger",
        "configurationAttributes": {
          "launch": {
            "required": ["program"],
            "properties": {
              "program": {
                "type": "string",
                "description": "Path to the program."
              },
              "debugServer": {
                "type": "number",
                "description": "Port for your debug adapter"
              }
            }
          }
        },
        "languages": ["c", "asm"]
      }
    ]
  }
}
